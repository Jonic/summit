<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<form action="/signup" method="post">
			<fieldset>
				<input type="hidden" name="_csrf" value="{{token}}" />

				<div class="form-group">
					<label for="name">Your Name</label>
					<input class="form-control {{form.name.error}}" id="name" name="name" type="text" value="{{form.name.value}}" />
				</div>

				<div class="form-group">
					<label for="username">Username</label>
					<input class="form-control {{form.username.error}}" id="username" name="username" type="text" value="{{form.username.value}}" />
				</div>

				<div class="form-group">
					<label for="email">Email Address</label>
					<input class="form-control {{form.email.error}}" id="email" name="email" type="email" value="{{form.email.value}}" />
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input class="form-control {{form.password.error}}" id="password" name="password" type="password" />
				</div>

				<div class="checkbox">
					<label><input {{form.privateAccount.checked}} type="checkbox" name="privateAccount" value="true" /> Private account</label>
				</div>

				<button class="btn btn-primary" type="submit">Create Account</button>
			</fieldset>
		</form>
	</div>
</div>