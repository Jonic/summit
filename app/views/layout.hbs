<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8" />

		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<title>{{title}}</title>

		<script src="/vendor/html5shiv/dist/html5shiv.js" type="text/javascript"></script>

		<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/dist/css/bootstrap.min.css" />
		<link rel="stylesheet" type="text/css" href="/styles/master.min.css" />
	</head>

	<body class="body">
		<div class="navbar navbar-default">
			<div class="container">
				<a class="navbar-brand animated wobble" href="/">Summit</a>

				<ul class="nav navbar-nav navbar-right">
					{{#if auth.loggedin}}
						<li><a href="/dashboard">Welcome back, {{auth.username}}</a></li>
						<li><a href="/signout">Sign Out</a></li>
					{{else}}
						<li><a href="/signup">Sign Up</a></li>
						<li><a href="/signin">Sign In</a></li>
					{{/if}}
				</ul>
			</div>
		</div>

		<div class="container">
			<h1>{{page.title}}</h1>

			{{#if alert}}
				<div class="panel panel-{{alert.className}}">
  					<div class="panel-heading">
    					<h3 class="panel-title">{{alert.title}}</h3>
  					</div>
  					<div class="panel-body">
  						<p>{{alert.description}}</p>
  						{{#if alert.errors}}
	  						<ul>
								{{#each alert.errors}}
									<li>{{this.msg}}</li>
								{{/each}}
							</ul>
						{{/if}}
					</div>
				</div>
			{{/if}}

{{{body}}}
		</div>

		<script src="/vendor/jquery/jquery.min.js" type="text/javascript"></script>
		<script src="/scripts/master.min.js" type="text/javascript"></script>
	</body>
</html>